{
  "name": "nuxt-app",
  "version": "1.4.0",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "concurrently \"nuxt dev\" \"npm run start:db\"",
    "start:db": "cd pocketbase && pocketbase serve --http=0.0.0.0:8090",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "format": "prettier --write \"**/*.{js,vue,html,css}\"",
    "release": "release-it"
  },
  "devDependencies": {
    "@mdi/font": "^7.4.47",
    "@nuxt/image": "^1.8.1",
    "@nuxtjs/i18n": "^8.5.5",
    "@types/pdfkit": "^0.13.5",
    "@types/qrcode": "^1.5.5",
    "concurrently": "^9.0.1",
    "exceljs": "^4.4.0",
    "h3": "^1.13.0",
    "install": "^0.13.0",
    "moment": "^2.30.1",
    "nuxt": "^3.13.2",
    "path": "^0.12.7",
    "pdfkit": "^0.15.0",
    "pocketbase": "^0.21.5",
    "prettier": "^3.3.3",
    "qrcode": "^1.5.4",
    "release-it": "^17.7.0",
    "sass": "^1.79.4",
    "vite": "5.4.8",
    "vue": "3.5.11",
    "vuetify-nuxt-module": "0.18.3"
  },
  "packageManager": "yarn@4.3.1",
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
      "commitMessage": "release ${version}",
      "release": true,
      "tagName": "v${version}"
    },
    "git": {
      "tag": true,
      "push": true,
      "commit": true
    },
    "npm": {
      "publish": true
    },
    "version": {
      "preRelease": "snapshot"
    }
  }
}
