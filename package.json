{
  "name": "nuxt-app",
  "version": "1.6.0",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "concurrently \"nuxt dev\" \"npm run start:db\"",
    "start:db": "cd pocketbase && pocketbase serve --http=0.0.0.0:8090",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "format": "prettier --write \"**/*.{js,vue,html,css}\"",
    "release": "release-it"
  },
  "devDependencies": {
    "@mdi/font": "^7.4.47",
    "@nuxt/image": "^1.8.1",
    "@nuxtjs/i18n": "^9.1.1",
    "@types/pdfkit": "^0.13.8",
    "@types/qrcode": "^1.5.5",
    "concurrently": "^9.1.0",
    "exceljs": "^4.4.0",
    "h3": "^1.13.0",
    "install": "^0.13.0",
    "moment": "^2.30.1",
    "nuxt": "^3.15.0",
    "path": "^0.12.7",
    "pdfkit": "^0.16.0",
    "pocketbase": "^0.25.0",
    "prettier": "^3.4.2",
    "qrcode": "^1.5.4",
    "release-it": "^18.1.1",
    "release-it-snapshot-prerelease-version": "^2.1.0",
    "sass": "^1.83.0",
    "typescript": "^5.7.2",
    "vite": "6.0.11",
    "vue": "3.5.13",
    "vuetify-nuxt-module": "0.18.3"
  },
  "packageManager": "yarn@4.3.1",
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "git": {
      "tagName": "v${version}",
      "commitMessage": "release v${version}",
      "requireCleanWorkingDir": true,
      "push": true
    },
    "plugins": {
      "release-it-snapshot-prerelease-version": {}
    }
  }
}
